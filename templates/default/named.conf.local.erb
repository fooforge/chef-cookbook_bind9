// Consider adding the 1918 zones here, if they are not used in your
// organization
//include "/etc/bind/zones.rfc1918";

<% @zonefiles.each do |conf| -%>
zone "<%= conf["domain"] %>" IN {
  type <%= conf["type"] %>;
  file "<%= node[:bind9][:config_path] %>/<%= conf["domain"] %>";
  allow-transfer {
  <% conf["allow_transfer"].each do |ip| -%>
    <%= ip %>;
  <% end %>
  };
};

<% end %>
